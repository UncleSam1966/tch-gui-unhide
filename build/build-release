#!/bin/sh

common=$(find ../utilities/ -type f | grep -v -E '(README|dumaos)' | tr "$IFS" " ")

for f in $(ls ../tch-gui-unhide-*)
do
  echo $f | grep -q 'tch-gui-unhide-18.1.c.05'
  if [ $? -eq 0 ]
  then
    dumaos="../utilities/dumaos-beta"
  else
    dumaos=""
  fi

  echo Writing $TARGET...
  tar --xform='s,utilities/,,' --owner=root --group=root --mode=755 -czf "$(echo $f | sed -e 's/tch-gui-unhide-//').tar.gz" ../tch-gui-unhide $f $common $dumaos
done